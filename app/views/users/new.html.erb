<%= form_for @user, url: {action: "create"} do |user_form| %>
	<h2>Sign-Up</h2>
	<p><%= user_form.text_field :username, placeholder: 'Username' %></p>
	<p><%= user_form.text_field :email, placeholder: 'Email' %></p>
	<p><%= user_form.text_field :password, placeholder: 'Password' %></p>
	<p><%= user_form.text_field :password_confirmation, placeholder: 'Confirm Password' %></p>
	<p><%= user_form.submit %></p>
<% end %>

